<%= javascript_include_tag 'tasks/task_form', 'data-turbolinks-track' => true  %>
<%= javascript_include_tag 'tasks/star_priority_form', 'data-turbolinks-track' => true  %>




  <div class="new_form">
<%= form_for(Task.new,  remote: true, :html => {:id => "form#{project.id}"}) do |f| %>
        <%= hidden_field_tag :project_id,project.id%>
        <div class="col-xs-5">
        <%= f.text_field :title, class:'input_'%>
        </div>
        <div class="col-xs-2">
    <div class="star-priority-new" id="star-priority-new<%=@project.id %>"></div>
        </div>
        <div class="col-xs-3">
    <div class='input-group date datetimepicker1'>
      <%= f.text_field :deadline, class: 'form-control' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
        </div>
        <div class="col-xs-2">
  <%= f.submit 'Add Task',:class => "btn btn-success"                           %>
        </div>
<% end %>
</div>

